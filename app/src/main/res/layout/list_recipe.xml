<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/recipe_title"
        android:layout_alignBaseline="@+id/recipe_img"
        android:layout_toRightOf="@+id/recipe_img"
        android:layout_toEndOf="@+id/recipe_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:paddingEnd="6dp"
        android:text="Recipe"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/recipeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recipe_title"
        android:layout_toRightOf="@+id/recipe_title"
        android:layout_toEndOf="@+id/recipe_title"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:text=" Recipe id: " />

    <TextView
        android:id="@+id/social_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recipe_title"
        android:layout_toRightOf="@+id/recipeId"
        android:layout_toEndOf="@+id/recipeId"
        android:text="Recipe ID"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_title"
        android:text="Ingredients"
        android:textAppearance="?android:attr/textAppearanceMedium" />



    <ImageView
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/recipe_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/recipe_img" />

</RelativeLayout>